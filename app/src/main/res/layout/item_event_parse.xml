<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">

    <FrameLayout
        android:id="@+id/item_event_fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/item_event_parse_iv_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background"
            />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_event_parse_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aerosmith concert"
            android:textColor="@color/colorWhite"
            android:textSize="26sp"
            android:layout_margin="20dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_event_tv_event_parse_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:text="Auditorio Telmex"
            android:textSize="18sp"
            android:textColor="@color/color_primary_blue"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_event_parse_tv_date_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:text="30 Octubre 10:00 pm"
            android:textSize="18sp"
            android:textColor="@color/colorWhite"/>
    </FrameLayout>
</com.google.android.material.card.MaterialCardView>