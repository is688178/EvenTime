<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/color_light_gray">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_confirm_event_assistance_tv_title"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_event_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aerosmith concert"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_confirm_event_assistance_tv_title" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_confirm_event_assistance_tv_date"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_confirm_event_assistance_tv_event_name" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_event_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/12/2019"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@id/alert_dialog_confirm_event_assistance_tv_date"
        app:layout_constraintTop_toTopOf="@id/alert_dialog_confirm_event_assistance_tv_date"
        app:layout_constraintBottom_toBottomOf="@id/alert_dialog_confirm_event_assistance_tv_date"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/alert_dialog_confirm_event_assistance_tv_hour"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_confirm_event_assistance_tv_date" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_event_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10:00 pm"
        android:layout_marginStart="10dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintStart_toEndOf="@id/alert_dialog_confirm_event_assistance_tv_hour"
        app:layout_constraintTop_toTopOf="@id/alert_dialog_confirm_event_assistance_tv_hour"
        app:layout_constraintBottom_toBottomOf="@id/alert_dialog_confirm_event_assistance_tv_hour"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/alert_dialog_confirm_event_assistance_tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:padding="14dp"
        android:textColor="@color/colorWhite"
        android:text="@string/cancel_text"
        app:layout_constraintBottom_toBottomOf="@id/alert_dialog_confirm_event_assistance_btn_confirm"
        app:layout_constraintEnd_toStartOf="@id/alert_dialog_confirm_event_assistance_btn_confirm"
        app:layout_constraintTop_toTopOf="@id/alert_dialog_confirm_event_assistance_btn_confirm" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/alert_dialog_confirm_event_assistance_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/alert_dialog_confirm_event_assistance_btn_confirm"
        android:textAllCaps="false"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/alert_dialog_confirm_event_assistance_tv_hour" />
</androidx.constraintlayout.widget.ConstraintLayout>