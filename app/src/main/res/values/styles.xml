        <item name="colorOnSurface">#809ECB</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">#000DFF</item>
    </style>

    <!--TextView style-->
    <style name="App_TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorAccent">@color/color_primary_blue</item>
        <item name="colorPrimary">@color/color_dark_gray</item>
    </style>

</resources>